{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "es2015",
        "target": "es2016",
        "sourceMap": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ]
}